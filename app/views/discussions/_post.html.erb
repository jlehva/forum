<div class="container">
  <div class="row">
    <div class="col-sm-1">
      <div class="thumbnail">
        <% if current_user.avatar %>
            <img class="img-responsive user-photo" src="<%= current_user.avatar %>&s=58">
        <% else %>
            <img class="img-responsive user-photo" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png">
        <% end %>
      </div><!-- /thumbnail -->
    </div><!-- /col-sm-1 -->

    <div class="col-sm-5">
      <div class="panel panel-default">
        <div class="panel-heading">
          <strong><%= post.user.username %></strong> <span class="text-muted"><%= post.created_at.to_formatted_s(:long)  %></span>

          <% if current_user %>
              <%= link_to "+#{post.likes.positive_likes.count}", like_post_path(post_id: post.id, positive: 'true'), method: :post, class: "label label-success" %>
              <%= link_to "-#{post.likes.negative_likes.count}", like_post_path(post_id: post.id, positive: 'false'), method: :post, class: "label label-danger" %>
          <% else %>
              <span class="label label-success">+1</span>
              <span class="label label-danger">-666</span>
          <% end %>


        </div>
        <div class="panel-body">
          <%= post.description %>
        </div><!-- /panel-body -->
      </div><!-- /panel panel-default -->
    </div><!-- /col-sm-5 -->

  </div><!-- /row -->

</div><!-- /container -->