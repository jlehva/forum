<div class="container">
<h1>Listing Discussions</h1>

<%= link_to 'New Discussion', new_discussion_path, class: 'btn btn-default' if current_user %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discussions.each do |discussion| %>
      <tr>
        <td><%= link_to discussion.title, discussion %></td>
        <td>started by <%= discussion.user.username %> @ <%= discussion.created_at.to_formatted_s(:long) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

</div>